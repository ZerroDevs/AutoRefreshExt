{
	"manifest_version": 3,
	"name": "AutoRefresh",
	"version": "1.1",
	"description": "Auto refresh pages with customizable timers",
	"permissions": [
		"storage",
		"tabs",
		"activeTab",
		"notifications"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.svg",
			"48": "icons/icon48.svg"
		}
	},
	"icons": {
		"16": "icons/icon16.svg",
		"48": "icons/icon48.svg"
	},
	"web_accessible_resources": [{
		"resources": [
			"icons/*.svg",
			"notification-icon.svg"
		],
		"matches": ["<all_urls>"]
	}],
	"background": {
		"service_worker": "background.js"
	}
}