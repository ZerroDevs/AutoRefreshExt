{
	"manifest_version": 3,
	"name": "AutoRefresh",
	"version": "1.1",
	"description": "Auto refresh pages with customizable timers",
	"permissions": [
		"storage",
		"tabs",
		"activeTab",
		"notifications"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon16.svg",
			"48": "icon48.svg"
		}
	},
	"icons": {
		"16": "icon16.svg",
		"48": "icon48.svg"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	}
}